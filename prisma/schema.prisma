generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"        // <- gunakan "postgresql" kalau pakai Supabase
  url      = env("DATABASE_URL")
}

model Food {
  id          String   @id @default(cuid())
  name        String
  ingredients String
  description String
  type        String   @default("FRESH")  // <- enum DIHAPUS, ganti String
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
